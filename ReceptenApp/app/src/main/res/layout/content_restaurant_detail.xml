<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/receptInfoBackButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:paddingRight="15dp"
                app:srcCompat="?attr/actionModeCloseDrawable"
                app:tint="@color/darktext" />


            <ToggleButton
                android:id="@+id/receptenInfoFavorietButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:textOff=""
                android:textOn="" />


        </RelativeLayout>


        <TextView
            android:id="@+id/receptNaam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/darktext"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receptBeschrijving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"


            android:paddingBottom="8dp"
            android:text="Xggffffffffffffffffffffffffffffffffffffffffffffffffffffgg"
            android:textColor="@color/darktext"
            android:textSize="16sp" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>